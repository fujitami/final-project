#album--wrapper.pt-3
  #album-search--upper
    -# タイトル(アルバム名・画像)
    #album-search--bgmask.row.justify-content-between.d-flex.align-items-center
      #artist-name-search__title--wrapper.col-4.col-sm-6.col-xl-4
        #album-search__title
        #album-search__title--img
      #artist-name-search__back--wrapper.col-4.col-sm-6.col-xl-8
        = button_to '検索結果に戻る', artist_path, id: 'artist-name-search__back', class: 'btn btn-green400 float-right', onClick: 'history.go(-1); return false;', data: {"turbolinks" => false}

  #album-search--lower.justify-content-around.d-flex.mx-auto
    -# タグ選択
    #album-search__tags
      %h4#album-search__tags--title.text-center.pb-4
        このアルバムの印象は？
      -# タグ一覧
      %ul#album-search__tags--lists.list-inline.row.justify-content-center.d-flex
        %li.list-inline-item.col-4.pb-3
          = button_tag 'happy', id: 'tag-happy', class: 'btn tag-btn album-search__tag--btn btn-orange400 d-block mx-auto', type: 'button', value: '1'
        %li.list-inline-item.col-4.pb-3
          = button_tag 'anger', id: 'tag-anger', class: 'btn tag-btn album-search__tag--btn btn-red400 d-block mx-auto', type: 'button', value: '2'
        %li.list-inline-item.w-100
        %li.list-inline-item.col-4.pb-3
          = button_tag 'sad', id: 'tag-sad', class: 'btn tag-btn album-search__tag--btn btn-indigo400 d-block mx-auto', type: 'button', value: '3'
        %li.list-inline-item.col-4.pb-3
          = button_tag 'surprise', id: 'tag-surprise', class: 'btn tag-btn album-search__tag--btn btn-yellow400 d-block mx-auto', type: 'button', value: '4'
        %li.list-inline-item.w-100
        %li.list-inline-item.col-4.pb-3
          = button_tag 'fear', id: 'tag-fear', class: 'btn tag-btn album-search__tag--btn btn-purple400 d-block mx-auto', type: 'button', value: '5'
        %li.list-inline-item.col-4.pb-3
          = button_tag 'disgust', id: 'tag-disgust', class: 'btn tag-btn album-search__tag--btn btn-grey400 d-block mx-auto', type: 'button', value: '6'
        %li.list-inline-item.w-100
        %li.list-inline-item.col-4.pb-3
          = button_tag 'neutral', id: 'tag-neutral', class: 'btn tag-btn album-search__tag--btn btn-white d-block mx-auto', type: 'button', value: '7'

    -# 試聴プレイヤ
    #album-search__audition
      %iframe#spotify-player{ width: '320', height: '300', frameborder: '0', allowtransparency: 'true', allow: 'encrypted-media' }
